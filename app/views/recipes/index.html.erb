<p id="notice"><%= notice %></p>

<div class="row">
  <table class="medium-12 columns">
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr class="row">
          <td class="medium-9 columns"><b><%= recipe.name %></b></td>
          <td class="medium-1 columns"><%= link_to raw('<i class="fi-eye"></i>'), recipe %> </td>
          <td class="medium-1 columns"><%= link_to raw('<i class="fi-pencil"></i>'), edit_recipe_path(recipe) %></td>
          <td class="medium-1 columns"><%= link_to raw('<i class="fi-x"></i>'), recipe,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="row">
  <%= link_to 'Create Recipe', new_recipe_path, :class => "button tiny"%>
</div>
